<robot name="robot">
  <!-- 基础链接 -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.05" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 0.8" />
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.2 0.05" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01" />
    </inertial>
  </link>

  <!-- Livox激光雷达坐标系 -->
  <link name="livox_frame">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1" />
      </geometry>
      <material name="green">
        <color rgba="0 1 0 0.8" />
      </material>
      <origin xyz="0 0 0.05" rpy="0 0 0" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.1" />
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0" />
    </collision>
    <inertial>
      <mass value="0.5" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
    </inertial>
  </link>

   <link name="livox_scan">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1" />
      </geometry>
      <material name="green">
        <color rgba="0 1 0 0.8" />
      </material>
      <origin xyz="0 0 0.05" rpy="0 0 0" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.1" />
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0" />
    </collision>
    <inertial>
      <mass value="0.5" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
    </inertial>
  </link>

  <!-- Livox IMU传感器 -->
  <link name="lidar_frame">
    <visual>
      <geometry>
        <sphere radius="0.03" />
      </geometry>
      <material name="red">
        <color rgba="1 0 0 0.8" />
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.03" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1" />
      <inertia ixx="0.0002" ixy="0.0" ixz="0.0" iyy="0.0002" iyz="0.0" izz="0.0002" />
    </inertial>
  </link>

  <!-- base_link到livox_frame的固定关节 -->
  <joint name="base_to_livox" type="fixed">
    <parent link="base_link" />
    <child link="livox_frame" />
    <origin xyz="0 0 0" rpy="0 0.5236 0" />
  </joint>

  <!-- livox_frame到livox_imu的固定关节 -->
  <joint name="livox_to_imu" type="fixed">
    <parent link="base_link" />
    <child link="lidar_frame" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>

  <!-- livox_frame到livox_imu的固定关节 -->
  <joint name="livox_to_scan" type="fixed">
    <parent link="base_link" />
    <child link="livox_scan" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
</robot>
    